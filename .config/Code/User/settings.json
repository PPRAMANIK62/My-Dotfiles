{
  "tabnine.experimentalAutoImports": true,
  "files.autoSave": "afterDelay",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.wordWrap": "on",
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "terminal.integrated.fontWeight": "normal",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "terminal.integrated.env.linux": {},
  "terminal.integrated.commandsToSkipShell": ["matlab.interrupt"],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.sideBar.location": "right",
  "editor.fontLigatures": false,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit",
    "source.organizeImports": "explicit"
  },
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.jsxSingleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.renderWhitespace": "all",
  "editor.lineNumbers": "relative",

  // open json editor for settings
  "workbench.settings.editor": "json",

  // theme
  "workbench.colorTheme": "Aura Dark (Soft Text)",
  "workbench.iconTheme": "material-icon-theme",

  // change font
  // "editor.fontFamily": "'Cascadia Code'",
  "editor.fontFamily": "Geist Mono",
  "scm.inputFontFamily": "Geist Mono",
  "terminal.integrated.fontFamily": "MartianMono Nerd Font",
  "chat.editor.fontFamily": "Geist Mono",
  "debug.console.fontFamily": "Geist Mono",
  "editor.codeLensFontFamily": "Geist Mono",
  "notebook.output.fontFamily": "Geist Mono",
  "markdown.preview.fontFamily": "Geist Mono",
  "editor.inlayHints.fontFamily": "Geist Mono",

  // font size
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 12,

  // ui
  "workbench.activityBar.location": "hidden",
  "editor.minimap.enabled": false,
  "window.commandCenter": false,
  "workbench.statusBar.visible": false,
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.vertical": "auto",
  "window.titleBarStyle": "custom",

  // APC
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 28
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 12,
      "y": 10
    }
  },
  "apc.font.family": "Geist Mono",
  "apc.monospace.font.family": "Geist Mono",
  "apc.statusBar": {
    "position": "editor-bottom",
    "height": 28,
    "fontSize": 12
  },

  // custom css
  "apc.stylesheet": {
    ".sidebar > .composite": "height: 12px !important",
    ".title-label": "display: none !important",
    ".title-actions": "display: none !important",
    ".tabs-and-actions-container > .editor-actions": "display: none !important",
    ".titlebar-center": "display: none !important",
    ".titlebar-right": "display: none !important",
    ".inline-tabs-placeholder": "display: none !important",
    ".split-view-view .visible": "background-color: #110f17 !important"
  },

  // aura theme customization
  "workbench.colorCustomizations": {
    "[Aura Dark (Soft Text)]": {
      "editor.background": "#14141a",
      "terminal.background": "#14141a",
      "activityBar.background": "#14141a",
      "statusBar.background": "#14141a",
      "editorGroupHeader.tabsBackground": "#14141a",
      "tab.inactiveBackground": "#14141a"
    }
  },

  // Toggle excluded files
  "files.exclude": {
    "**/.git": false,
    "**/.svn": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false,
    "**/node_modules": false,
    "**/.next": false,
    "**/.husky": false,
    "**/drizzle": false,
    "**/dist": false,
    "**/.todo.md": false,
    "**/.vscode": false,
    "**/.eslintrc.cjs": false,
    "**/.editorconfig": false,
    "**/.gitignore": false,
    "**/.lintstagedrc.mjs": false,
    "**/.markdownlint.json": false,
    "**/.markdownlintignore": false,
    "**/.prettierignore": false,
    "**/bun.lockb": false,
    "**/cspell.json": false,
    "**/package-lock.json": false,
    "**/pnpm-lock.yaml": false,
    "**/next-env.d.ts": false,
    "**/postcss.config.cjs": false,
    "**/prettier.config.js": false,
    "**/README.md": false,
    "**/next.config.js": false,
    "**/tailwind.config.ts": false,
    "**/drizzle.config.ts": false,
    "**/migrate.ts": false,
    "**/.env.example": false
  },

  // misc
  "workbench.startupEditor": "none",
  "explorer.compactFolders": false,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "window.zoomLevel": 1.5,

  "workbench.editor.enablePreview": false,
  "window.newWindowDimensions": "inherit",
  "diffEditor.renderSideBySide": false,
  "editor.snippetSuggestions": "top",
  "editor.detectIndentation": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "workbench.editor.showTabs": "multiple",

  "breadcrumbs.enabled": false,
  "scm.diffDecorations": "none",
  "editor.matchBrackets": "never",
  "workbench.tips.enabled": false,
  "editor.colorDecorators": false,
  "editor.lightbulb.enabled": "off",
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.hideCursorInOverviewRuler": true,
  "editor.stickyScroll.enabled": false,
  "editor.stickyScroll.scrollWithEditor": false,

  // Here you can add your custom styles and scripts
  "vscode_custom_css.imports": [
    "file:///home/purbayan-pramanik/custom-vscode.css",
    "file:///home/purbayan-pramanik/vscode-script.js"
  ],
}
